{
    "version": "1.0.0",
    "title": "What is the impact if the primary server is down?",
    "description": "If the primary server is down, we should try the backup server.",
    "tags": ["microservice"],
    "steady-state-hypothesis": {
        "title": "Application responds",
        "probes": [
            {
                "type": "probe",
                "name": "the-req_rand-service-must-be-running",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "os.path",
                    "func": "exists",
                    "arguments": {
                        "path": "require_rand.pid"
                    }
                }
            },
            {
                "type": "probe",
                "name": "the-secondary-server-must-be-running",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "os.path",
                    "func": "exists",
                    "arguments": {
                        "path": "secondary.pid"
                    }
                }
            },
            {
                "type": "probe",
                "name": "we-can-request-random-value",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "timeout": 3,
                    "verify_tls": false,
                    "url": "http://localhost:8001/index/10"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "kill-primary-server",
            "provider": {
                "type": "process",
                "path": "kill",
                "arguments": "$(<primary.pid)"
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "restart-primary-server",
            "provider": {
                "type": "process",
                "path": "python3",
                "arguments": "rand_server.py 8002 'primary'"
            }
        }
    ]
}
